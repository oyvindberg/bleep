{
  "$schema" : "https://raw.githubusercontent.com/oyvindberg/bleep/master/schema.json",
  "projects" : {
    "bleep" : {
      "dependencies" : [
        "com.lihaoyi::pprint:0.7.1",
        "com.monovore::decline:2.2.0",
        "org.graalvm.nativeimage:svm:22.0.0.2",
        "org.scalameta:svm-subs:101.0.0",
        "org.virtuslab.scala-cli::bloop-rifle:0.1.0"
      ],
      "dependsOn" : "bleep-core",
      "extends" : [
        "template-common-main",
        "template-scala-2.13"
      ],
      "platform" : {
        "jvmMainClass" : "bleep.Main"
      }
    },
    "bleep-core" : {
      "cross" : {
        "jvm213" : {
          "dependencies" : "org.scala-lang:scala-reflect:2.13.8"
        },
        "jvm3" : {
          "dependencies" : "org.scala-lang::scala3-library:3.1.1"
        }
      },
      "dependencies" : [
        {
          "for3Use213" : true,
          "module" : "ch.epfl.scala::bloop-config:1.4.12"
        },
        "com.lihaoyi::fansi:0.3.1",
        "io.circe::circe-generic:0.14.1",
        {
          "for3Use213" : true,
          "module" : "io.get-coursier::coursier:2.0.16"
        },
        "org.gnieh::diffson-circe:4.1.1"
      ],
      "extends" : "template-cross-all"
    },
    "bleep-tasks" : {
      "dependencies" : "se.sawano.java:alphanumeric-comparator:1.4.1",
      "dependsOn" : "bleep-core",
      "extends" : "template-cross-all",
      "resources" : "./liberated/sbt-native-image/plugin/src/main/resources",
      "sources" : [
        "./liberated/bloop-packager/src/main/scala",
        "./liberated/sbt-git-versioning/src/main/scala",
        "./liberated/sbt-native-image/plugin/src/main/scala"
      ]
    },
    "bleep-test" : {
      "dependencies" : "org.scalatest::scalatest:3.2.11",
      "dependsOn" : "bleep",
      "extends" : "template-scala-2.13",
      "folder" : "./bleep",
      "sbt-scope" : "test",
      "testFrameworks" : [
        "com.novocode.junit.JUnitFramework",
        "munit.Framework",
        "org.scalacheck.ScalaCheckFramework",
        "org.scalatest.tools.Framework",
        "org.scalatest.tools.ScalaTestFramework",
        "org.specs.runner.SpecsFramework",
        "org.specs2.runner.Specs2Framework",
        "org.specs2.runner.SpecsFramework"
      ]
    },
    "infrastructure" : {
      "dependsOn" : [
        "bleep",
        "bleep-tasks"
      ],
      "extends" : [
        "template-common-main",
        "template-scala-2.13"
      ]
    }
  },
  "scripts" : {
    "jars" : "infrastructure/bleep.infra.PackageAll",
    "native-image" : "infrastructure/bleep.infra.GenNativeImage"
  },
  "templates" : {
    "template-common" : {
      "platform" : {
        "name" : "jvm"
      },
      "scala" : {
        "options" : [
          "-encoding",
          "utf8",
          "-feature",
          "-language:experimental.macros",
          "-language:higherKinds",
          "-language:implicitConversions",
          "-unchecked"
        ]
      }
    },
    "template-common-main" : {
      "extends" : "template-common",
      "sbt-scope" : "main"
    },
    "template-cross-all" : {
      "cross" : {
        "jvm213" : {
          "extends" : "template-scala-2.13"
        },
        "jvm3" : {
          "extends" : "template-scala-3"
        }
      },
      "extends" : "template-common-main"
    },
    "template-scala-2.13" : {
      "extends" : "template-common",
      "scala" : {
        "options" : [
          "-Vimplicits",
          "-Vtype-diffs",
          "-Wdead-code",
          "-Wextra-implicit",
          "-Wnumeric-widen",
          "-Wunused:explicits",
          "-Wunused:implicits",
          "-Wunused:imports",
          "-Wunused:locals",
          "-Wunused:nowarn",
          "-Wunused:params",
          "-Wunused:patvars",
          "-Wunused:privates",
          "-Wvalue-discard",
          "-Xcheckinit",
          "-Xlint:-byname-implicit",
          "-Xlint:adapted-args",
          "-Xlint:constant",
          "-Xlint:delayedinit-select",
          "-Xlint:deprecation",
          "-Xlint:doc-detached",
          "-Xlint:inaccessible",
          "-Xlint:infer-any",
          "-Xlint:missing-interpolator",
          "-Xlint:nullary-unit",
          "-Xlint:option-implicit",
          "-Xlint:package-object-classes",
          "-Xlint:poly-implicit-overload",
          "-Xlint:private-shadow",
          "-Xlint:stars-align",
          "-Xlint:strict-unsealed-patmat",
          "-Xlint:type-parameter-shadow",
          "-explaintypes",
          "-language:existentials"
        ],
        "version" : "2.13.8"
      }
    },
    "template-scala-3" : {
      "extends" : "template-common",
      "sbt-scope" : "main",
      "scala" : {
        "options" : [
          "-Ykind-projector",
          "-deprecation",
          "-explain",
          "-explain-types"
        ],
        "version" : "3.1.1"
      }
    }
  }
}