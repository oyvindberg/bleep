{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/oyvindberg/bleep/master/schema.json",
  "title": "Bleep build file",
  "description": "",
  "type": "object",
  "$defs": {
    "Module": {
      "type": "string",
      "pattern": "^[^:]+:{1,3}[^:]+$"
    },
    "TemplateId": {
      "type": "string"
    },
    "TestFrameworkName": {
      "type": "string"
    },
    "PlatformName": {
      "type": "string",
      "emum": [
        "jvm",
        "js",
        "native"
      ]
    },
    "Option": {
      "type": "string"
    },
    "Options": {
      "oneOf": [
        {
          "$ref": "#/$defs/Option"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Option"
          }
        }
      ]
    },
    "ProjectName": {
      "type": "string"
    },
    "SourceLayout": {
      "type": "string",
      "enum": [
        "none",
        "java",
        "normal",
        "cross-pure",
        "cross-full"
      ]
    },
    "CompileOrder": {
      "description": "defaulted to 'mixed'",
      "type": "string",
      "enum": [
        "mixed",
        "java->scala",
        "scala->java"
      ]
    },
    "SbtScope": {
      "type": "string",
      "enum": [
        "main",
        "test",
        "it"
      ]
    },
    "RelPath": {
      "type": "string",
      "pattern": "^\\./.+$"
    },
    "Dependency": {
      "anyOf": [
        {
          "$ref": "#/$defs/DependencyShort"
        },
        {
          "$ref": "#/$defs/DependencyLong"
        }
      ]
    },
    "DependencyShort": {
      "type": "string",
      "pattern": "^[^:]+:{1,3}[^:]+:[^:]+$"
    },
    "DependencyLong": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "module": {
          "$ref": "#/$defs/DependencyShort"
        },
        "forceJvm": {
          "type": "boolean"
        },
        "for3Use213": {
          "type": "boolean"
        },
        "for213Use3": {
          "type": "boolean"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "configuration": {
          "type": "string"
        },
        "exclusions": {
          "description": "on the form 'com.example::foo' or ['com.example::foo', 'com.example::bar']",
          "oneOf": [
            {
              "$ref": "#/$defs/Module"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Module"
              }
            }
          ]
        },
        "publication": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "ext": {
              "type": "string"
            },
            "classifier": {
              "type": "string"
            }
          }
        },
        "optional": {
          "type": "boolean"
        },
        "transitive": {
          "type": "boolean"
        },
        "isSbtPlugin": {
          "type": "boolean"
        }
      },
      "required": [
        "module"
      ]
    },
    "Java": {
      "type": "object",
      "properties": {
        "options": {
          "$ref": "#/$defs/Options"
        }
      }
    },
    "Scala": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "options": {
          "$ref": "#/$defs/Options"
        },
        "setup": {
          "$ref": "#/$defs/CompileSetup"
        },
        "compilerPlugins": {
          "oneOf": [
            {
              "$ref": "#/$defs/Dependency"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Dependency"
              }
            }
          ]
        }
      }
    },
    "Platform": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/$defs/PlatformName"
        },
        "jsVersion": {
          "type": "string"
        },
        "jsMode": {
          "type": "string",
          "enum": [
            "debug",
            "release"
          ]
        },
        "jsKind": {
          "type": "string",
          "enum": [
            "none",
            "commonjs",
            "esmodule"
          ]
        },
        "jsEmitSourceMaps": {
          "type": "boolean"
        },
        "jsJsdom": {
          "type": "boolean"
        },
        "jsMainClass": {
          "type": "string"
        },
        "jvmOptions": {
          "$ref": "#/$defs/Options"
        },
        "jvmMainClass": {
          "type": "string"
        },
        "jvmRuntimeOptions": {
          "$ref": "#/$defs/Options"
        },
        "nativeVersion": {
          "type": "string"
        },
        "nativeMode": {
          "type": "string",
          "enum": [
            "debug",
            "release"
          ]
        },
        "nativeGc": {
          "type": "string"
        },
        "nativeMainClass": {
          "type": "string"
        }
      }
    },
    "CompileSetup": {
      "type": "object",
      "properties": {
        "order": {
          "$ref": "#/$defs/CompileOrder"
        },
        "addLibraryToBootClasspath": {
          "description": "Defaulted to true",
          "type": "boolean"
        },
        "addCompilerToClasspath": {
          "description": "Defaulted to false",
          "type": "boolean"
        },
        "addExtraJarsToClasspath": {
          "description": "Defaulted to false",
          "type": "boolean"
        },
        "manageBootClasspath": {
          "description": "Defaulted to true",
          "type": "boolean"
        },
        "filterLibraryFromClasspath": {
          "description": "Defaulted to true",
          "type": "boolean"
        }
      }
    },
    "Project": {
      "type": "object",
      "properties": {
        "extends": {
          "oneOf": [
            {
              "$ref": "#/$defs/TemplateId"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/TemplateId"
              }
            }
          ]
        },
        "cross": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/Project"
          }
        },
        "folder": {
          "description": "path of project relative to build root. can be omitted if it is just the project name",
          "$ref": "#/$defs/RelPath"
        },
        "dependsOn": {
          "oneOf": [
            {
              "$ref": "#/$defs/ProjectName"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/ProjectName"
              }
            }
          ]
        },
        "source-layout": {
          "description": "selects a standardized set of source directories",
          "$ref": "#/$defs/SourceLayout"
        },
        "sbt-scope": {
          "description": "changes src/scala to source/main/scala and so on",
          "$ref": "#/$defs/SbtScope"
        },
        "sources": {
          "description": "additional set of source directories. you should set `sbt-scope` and `source-layout` first",
          "oneOf": [
            {
              "$ref": "#/$defs/RelPath"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/RelPath"
              }
            }
          ]
        },
        "resources": {
          "description": "additional set of resource directories. you should set `sbt-scope` and `source-layout` first",
          "oneOf": [
            {
              "$ref": "#/$defs/RelPath"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/RelPath"
              }
            }
          ]
        },
        "dependencies": {
          "oneOf": [
            {
              "$ref": "#/$defs/Dependency"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Dependency"
              }
            }
          ]
        },
        "java": {
          "$ref": "#/$defs/Java"
        },
        "scala": {
          "$ref": "#/$defs/Scala"
        },
        "platform": {
          "$ref": "#/$defs/Platform"
        },
        "testFrameworks": {
          "oneOf": [
            {
              "$ref": "#/$defs/TestFrameworkName"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/TestFrameworkName"
              }
            }
          ]
        }
      }
    }
  },
  "properties": {
    "projects": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Project"
      }
    },
    "templates": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Project"
      }
    }
  },
  "required": [
    "projects"
  ]
}